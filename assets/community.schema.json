{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Communities configuration",
  "description": "Describes a Thunderstore community configuration for deploying to Thunderstore.",
  "type": "object",
  "properties": {
    "communitySlug": {
      "title": "Thunderstore community slug",
      "type:": "string"
    },
    "runtimeFrameworkMoniker": {
      "title": "Runtime framework moniker",
      "type": "string"
    },
    "packageNamespace": {
      "title": "Thunderstore package namespace",
      "type": "string"
    },
    "packages": {
      "title": "NuGet packages to bridge",
      "type": "array",
      "items": {
        "title": "NuGet package ID",
        "type": "string"
      }
    }
  },
  "required": [ "communitySlug", "runtimeFrameworkMoniker", "packageNamespace" ]
}
